<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Browser Test Suite">
            <directory suffix="Test.php">./tests/Browser</directory>
        </testsuite>
    </testsuites>

    <php>
        <env name="APP_ENV" value="dusk.local"/>
        <env name="APP_URL" value="http://nginx"/>
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_HOST" value="mysql"/>
        <env name="DB_PORT" value="3306"/>
        <env name="DB_DATABASE" value="laravel_db"/>
        <env name="DB_USERNAME" value="laravel_user"/>
        <env name="DB_PASSWORD" value="laravel_pass"/>
        <env name="DUSK_DRIVER_URL" value="http://chromedriver:4444"/>
    </php>
</phpunit>
